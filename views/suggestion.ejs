<!DOCTYPE html>
<html>
  <head>
    <title> title </title>
    <link rel='stylesheet' href='/stylesheets/index.css' />
    <link rel='stylesheet' href='/stylesheets/suggestion.css' />
  </head>

  <body>
  		<div id="Nav">
  			<h1 id="logo">Cenema</h1>
  			<div id="login">
          <div id="user_container">   
            <img src="https://www.booksie.com/files/profiles/22/mr-anonymous_230x230.png" /> 
          <% if(logined) { %>
              <h4 id="user_name"> <%=username%> </h4> 
          <% } else { %>
            <h4 id="user_name"> SIGN IN </h4> 
          <% } %>            
          </div> 
          </div> 
          <% if(logined) { %>
            <div id="menu_icon"> 
              <h4>menu</h4>
            </div>
          <% } %>
      </div>
      
  
      <section class="suggestion">
        <table>
            <thead>
                <tr>
                    <th>NO</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>작성일</th>
                    <th>조회수</th>
                </tr>
            </thead>
            <tbody>
                <%  results.reverse().forEach(function(row){
                    var date = JSON.stringify(row.date);
                    date = date.substring(1,11).split("-");
                %>
                <tr>
                    <td><%= row.suggestion_id %></td>
                    <td><a href="suggestion/<%= row.suggestion_id %>"><%= row.title %></a></td>
                    <td><%= row.writer_name %></td>
                    <td><%= `${date[0]}/${date[1]}/${date[2]}` %></td>
                    <td><%= row.view %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="suggestion_insert"><button>글쓰기</button></a>
    </section>

  		</div>


		<div id="Menu" class="hidden">
			<h2>예매내역</h2>
			<h2>쿠폰</h2>
			<h2><a href="/suggestion">건의</a></h2>
		</div>
  		<script type="text/javascript" src="/javascripts/index.js"></script>
  </body>
</html>
